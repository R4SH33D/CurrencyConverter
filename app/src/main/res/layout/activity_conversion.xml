<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.r4sh33d.currencyconverter.ConversionActivity">

    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="151dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="35dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/editTextBaseCurrency"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/countryName"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/editTextBtc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextBaseCurrency"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/editTextETH"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextBtc"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_alignBottom="@id/editTextBaseCurrency"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_toEndOf="@+id/editTextBaseCurrency"
        android:layout_toRightOf="@+id/editTextBaseCurrency"
        android:text="TextView" />

    <TextView
        android:layout_marginLeft="47dp"
        android:layout_alignBottom="@id/editTextBtc"
        android:layout_toRightOf="@id/editTextBtc"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="BTC" />

    <TextView

        android:layout_marginLeft="47dp"
        android:layout_alignBottom="@id/editTextETH"
        android:layout_toRightOf="@id/editTextETH"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ETH" />
</RelativeLayout>
